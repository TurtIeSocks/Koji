{
	"compilerOptions": {
		"noImplicitAny": true,
    "noImplicitThis": true,
    "strictNullChecks": true,
    "esModuleInterop": true,
    "module": "CommonJS",
    "moduleResolution": "node",
    "removeComments": true,
    "downlevelIteration": true,
    "allowSyntheticDefaultImports": true,
    "isolatedModules": true,
    "baseUrl": "./src",
    "lib": [
      "es6",
      "ESNext",
      "dom"
    ],
    "jsx": "react",
    "strict": true,
    "sourceMap": true,
    "target": "es2020",
    "skipLibCheck": true,
		"allowJs": true,
		"paths": {
			"@assets/*": [
				"./assets/*"
			],
			"@components/*": [
				"./components/*"
			],
			"@services/*": [
				"./services/*"
			],
			"@hooks/*": [
				"./hooks/*"
			],
		},
	},
	"include": [
		"src"
	],
	"exclude": [
		"node_modules",
		"dist",
		"server"
	],
}