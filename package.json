{
  "name": "rdm-tools-2.0",
  "version": "0.1.0",
  "description": "Tool to make RDM routes",
  "main": "server/dist/index.js",
  "author": "TurtIeSocks <58572875+TurtIeSocks@users.noreply.github.com>",
  "license": "MIT",
  "scripts": {
    "postinstall": "prisma generate",
    "start": "node .",
    "build": "yarn client:build && yarn server:build",
    "clean": "rm -rf ./dist && rm -rf ./server/dist && rm -rf ./node_modules",
    "format": "prettier --config .prettierrc 'src/**/*.{ts,tsx}' --write && prettier --config .prettierrc 'server/**/*.ts' --write",
    "client:build": "ts-node esbuild.config.ts --prod",
    "client:dev": "ts-node esbuild.config.ts --dev",
    "client:watch": "ts-node esbuild.config.ts --watch",
    "server:build": "tsc -p ./server/tsconfig.json",
    "server:dev": "nodemon ./server/dist/index.js --watch ./server/dist",
    "server:watch": "tsc -p ./server/tsconfig.json -w"
  },
  "dependencies": {
    "@apollo/client": "^3.6.0",
    "@prisma/client": "^3.13.0",
    "apollo-server-express": "^3.6.7",
    "dotenv": "^16.0.0",
    "express": "^4.18.0",
    "graphql": "^16.4.0",
    "graphql-scalars": "^1.17.0",
    "leaflet": "^1.8.0",
    "react": "^18.1.0",
    "react-dom": "^18.1.0",
    "react-leaflet": "^4.0.0",
    "zustand": "^4.0.0-rc.0"
  },
  "devDependencies": {
    "@craftamap/esbuild-plugin-html": "^0.3.2",
    "@types/express": "^4.17.13",
    "@types/leaflet": "^1.7.9",
    "@types/node": "^17.0.29",
    "@types/react": "^18.0.8",
    "@types/react-dom": "^18.0.0",
    "@typescript-eslint/eslint-plugin": "^5.21.0",
    "@typescript-eslint/parser": "^5.21.0",
    "esbuild": "^0.14.38",
    "esbuild-plugin-alias-path": "^1.1.1",
    "esbuild-plugin-eslinter": "^0.1.2",
    "eslint": "^8.14.0",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-config-airbnb-typescript": "^16.1.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-import-resolver-alias": "^1.1.2",
    "eslint-plugin-import": "^2.24.2",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-react": "^7.29.4",
    "eslint-plugin-react-hooks": "^4.2.0",
    "nodemon": "^2.0.15",
    "prettier": "^2.6.2",
    "prisma": "^3.13.0",
    "ts-node": "^10.7.0",
    "typescript": "^4.6.3"
  }
}
